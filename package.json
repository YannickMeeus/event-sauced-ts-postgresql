{
  "name": "@silly-goose-software/event-sauced-postgresql",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "Event Store",
    "Event Sourcing",
    "CQRS",
    "Command",
    "Query",
    "Multi-database",
    "PostgreSQL"
  ],
  "main": "dist/event-sauced-postgresql.umd.js",
  "module": "dist/event-sauced-postgresql.es5.js",
  "typings": "dist/types/event-sauced-postgresql.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yannick Meeus <yannick.meeus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Silly-Goose-Software/event-sauced-ts-postgresql"
  },
  "license": "MIT",
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "commit": "git-cz",
    "console": "open http://localhost:8080",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@silly-goose-software/event-sauced-ts": "^1.0.2",
    "pg": "8.3.3"
  },
  "devDependencies": {
    "@jedmao/semantic-release-npm-github-config": "^1.0.9",
    "@commitlint/config-conventional": "9.1.2",
    "@types/jest": "26.0.10",
    "@types/node": "12.12.54",
    "@types/pg": "7.14.4",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "async-main": "1.0.2",
    "colors": "1.4.0",
    "commitizen": "4.2.1",
    "coveralls": "3.1.0",
    "cross-env": "7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.0",
    "eslint-plugin-node": "^11.1.0",
    "cz-conventional-changelog": "3.3.0",
    "event-stream": "4.0.1",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.2.13",
    "lodash": "4.17.21",
    "npm-check-updates": "7.1.1",
    "nps": "5.10.0",
    "nps-utils": "1.7.0",
    "prettier": "2.1.1",
    "prompt": "1.0.0",
    "replace-in-file": "6.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.26.8",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.6.2",
    "rollup-plugin-typescript2": "0.27.2",
    "semantic-release": "17.2.3",
    "testcontainers": "3.4.0",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.2",
    "uuid": "8.3.0",
    "validate-commit-msg": "2.14.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm start prerequisites && npm start build",
      "pre-commit": "lint-staged"
    }
  }
}
