{
  "name": "event-sauced-postgresql",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "Event Store",
    "Event Sourcing",
    "CQRS",
    "Command",
    "Query",
    "Multi-database"
  ],
  "main": "dist/event-sauced-postgresql.umd.js",
  "module": "dist/event-sauced-postgresql.es5.js",
  "typings": "dist/types/event-sauced-postgresql.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yannick Meeus <yannick.meeus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YannickMeeus/event-sauced-ts-postgresql"
  },
  "license": "MIT",
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@make-stuff-work/event-sauced": "^1.1.2",
    "pg": "7.12.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@types/pg": "7.11.2",
    "@types/uuid": "^3.4.5",
    "colors": "^1.3.3",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "event-stream": "4.0.1",
    "git-cz": "^3.2.1",
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^3.0.5",
    "jest": "24.9.0",
    "lint-staged": "^9.2.5",
    "lodash": "4.17.15",
    "npm-check-updates": "^3.1.21",
    "nps": "5.9.8",
    "nps-utils": "1.7.0",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.1.3",
    "rimraf": "^3.0.0",
    "rollup": "1.26.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "semantic-release": "^15.13.24",
    "testcontainers": "^2.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.6.2",
    "uuid": "^3.3.3",
    "validate-commit-msg": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm start prerequisites && npm start build",
      "pre-commit": "lint-staged"
    }
  }
}
